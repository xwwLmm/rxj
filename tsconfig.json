{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": ["dom", "es7"],
    "allowJs": true,
    "checkJs": true,
    "strict": true
  },
  "include": ["src/components"],
  "exclude": ["node_modules", "lib"]
}
